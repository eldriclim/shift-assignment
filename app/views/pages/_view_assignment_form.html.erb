<div class="container" id="sign-up-form">
  <div class="row">


    <div class="col-sm-offset-4 col-sm-4">

      <h3>View Assignment</h3>

      <%= form_for(@assignment, :url => assignments_show_path) do |f| %>

        <table>
          <tr>
            <td><strong>From</strong></td>
            <td><strong>To</strong></td>
          </tr>
          <tr>
            <td><%= date_select 'range1', 'start_date', :order => [:month, :day, :year] %></td>
            <td><%= date_select 'range2', 'end_date', :order => [:month, :day, :year] %></td>
          </tr>
        </table>

        <%= f.submit 'Search', class: 'btn sign-up-button' %>
      <% end %>


    </div>
  </div>
</div>
