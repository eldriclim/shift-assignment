<div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">

      <h3>Create Shift</h3>

      <%= render 'shared/flash_messages' %>

      <%= form_for(@shift) do |f| %>

      <table>
        <tr>
          <td><%= f.label :start_time %></td>
        </tr>
        <tr>
          <td><%= f.datetime_select :start_time,
  	              :order => [:day, :month, :year],
                  class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :end_time %></td>
        </tr>
        <tr>
          <td><%= f.datetime_select :end_time,
                  :order => [:day, :month, :year],
                  class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :max_count%></td>
        </tr>
        <tr>
          <td><%= f.text_field :max_count,
                  placeholder: 'max',
       	          class: 'form-control',
                  value: params[:max_count]  %></td>
        </tr>
      </table>

        <%= f.submit 'Create', class: 'btn sign-up-button' %>
      <% end %>
    </div>
  </div>
</div>
